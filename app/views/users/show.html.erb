<div class="user-wrapper">
  <div class="user-info">
    <h1><%= gravatar_for(@user) %></h1>
    <div class="text">
      <h1><%= @user.get_name %></h1>
      <% if user_signed_in? %>
        <p><%= link_to "Sửa thông tin", edit_user_registration_path %></p>
      <% end %>
    </div>
  </div>
  <div class="user-posts">
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>
  </div>
</div>
