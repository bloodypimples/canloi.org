<h2>Sửa thông tin</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :name, label: "Tên" %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label: "Mật khẩu", autocomplete: "off", hint: "bỏ trống nếu không cần thay đổi", required: false %>
    <%= f.input :password_confirmation, label: "Mật khẩu xác nhận", required: false %>
    <%= f.input :current_password, label: "Mật khẩu hiện tại", hint: "phải nhập mật khẩu hiện tại để cập nhật thông tin", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cập nhật" %>
  </div>
<% end %>
