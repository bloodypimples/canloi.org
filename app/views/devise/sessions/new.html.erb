<h1>Đăng nhập</h1>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, label: "Email" %>
    <%= f.input :password, required: false, label: "Mật khẩu" %>
    <%= f.input :remember_me, label: "Nhớ đăng nhập", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Đăng nhập" %>
  </div>
<% end %>
